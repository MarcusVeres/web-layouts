{
  "name": "layout-showcase",
  "version": "1.0.0",
  "description": "Different layout designs with CSS",
  "main": "index.js",
  "scripts": {
    "build:css": "postcss src/styles.css -o docs/styles.css",
    "copy:html": "node copy-html.js",
    "watch:css": "nodemon --ext css --watch src --exec \"npm run build:css\"",
    "watch:html": "nodemon --ext html --watch src/pages --exec \"npm run copy:html\"",
    "serve": "live-server docs",
    "watch": "run-p watch:*",
    "start": "run-p build:css copy:html watch serve"
  },
    "repository": {
    "type": "git",
    "url": "git+https://github.com/MarcusVeres/layout-showcase.git"
  },
  "keywords": [
    "css",
    "design",
    "layout",
    "ui",
    "ux"
  ],
  "author": "Marcus Veres",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarcusVeres/layout-showcase/issues"
  },
  "homepage": "https://github.com/MarcusVeres/layout-showcase#readme",
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "live-server": "^1.2.2",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5"
  }
}
